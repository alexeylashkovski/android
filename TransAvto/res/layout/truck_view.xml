                    android:id="@+id/tvOneTruckFirmPartners"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="TextView" />

            </TableRow>

            <TableRow
                android:id="@+id/trOneTruckFirmBlackList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp" >

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Фирма в &quot;черном списке&quot;:" />

                <TextView
                    android:id="@+id/tvOneTruckFirmBl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
