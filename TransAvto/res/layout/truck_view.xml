                    android:text="TextView"
                    android:textColor="@color/Blue" />

            </TableRow>

            <TableRow
                android:id="@+id/trOneTruckPhone3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp" >

                <ImageView
                    android:id="@+id/ivOneTruckPhone3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/mts" />

                <TextView
                    android:id="@+id/tvOneTruckPhone3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="TextView"
                    android:textColor="@color/Blue" />

            </TableRow>

            <TableRow
                android:id="@+id/trOneTruckPhone4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp" >

                <ImageView
                    android:id="@+id/ivOneTruckPhone4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/life" />

                <TextView
                    android:id="@+id/tvOneTruckPhone4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="TextView"
                    android:textColor="@color/Blue" />

            </TableRow>
        </TableLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/Gray" />

        <LinearLayout
            android:id="@+id/llOneTruckFirmName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
